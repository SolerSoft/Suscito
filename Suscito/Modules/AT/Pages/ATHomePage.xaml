<?xml version="1.0" encoding="utf-8" ?>
<Mvvm:ViewPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ATControls="clr-namespace:Suscito.Modules.AT.Controls"
             xmlns:ATPages="clr-namespace:Suscito.Modules.AT.Pages"
             xmlns:Mvvm="clr-namespace:SolerSoft.Maui.Mvvm;assembly=MauiToolkit"
             x:TypeArguments="ATPages:ATHomeVM"
             x:Class="Suscito.Modules.AT.Pages.ATHome"
             Title="ATHome">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Picker 
            x:Name="BowlbyStylePicker"
            Title="Pick your style" 
            ItemsSource="{Binding BowlbyStyles}"
            SelectedItem="{Binding BowlbyStyle}"
            />
        <ATControls:StyleInfoCard StyleInfo="{Binding BowlbyStyleInfo}" />
    </VerticalStackLayout>
</Mvvm:ViewPage>